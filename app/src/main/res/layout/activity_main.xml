<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ff000000"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/MainActivity">

    <TextView
        android:text="@string/SHOutside"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/SHOutside"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="@string/DefaultTemperatureValue"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/SHOutsideValue"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="@string/SHHousing3"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/SHHousing3"
        android:layout_below="@+id/SHOutside"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="@string/DefaultTemperatureValue"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/SHHousing3Value"
        android:layout_below="@+id/SHOutsideValue"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="@string/SHHousing4"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/SHHousing4"
        android:layout_below="@+id/SHHousing3"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="@string/DefaultTemperatureValue"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/SHHousing4Value"
        android:layout_below="@+id/SHHousing3Value"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="@string/OskarOutside"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/OskarOutside"
        android:layout_below="@+id/SHHousing4"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="@string/DefaultTemperatureValue"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/OskarOutsideValue"
        android:layout_below="@+id/SHHousing4Value"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="@string/OskarLagoon"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/OskarLagoon"
        android:layout_below="@+id/OskarOutside"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="@string/DefaultTemperatureValue"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/OskarLagoonValue"
        android:layout_below="@+id/OskarOutsideValue"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="@string/PdostalRoom"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/PdostalRoom"
        android:layout_below="@+id/OskarLagoon"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="@string/DefaultTemperatureValue"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8sp"
        android:id="@+id/PdostalRoomValue"
        android:layout_below="@+id/OskarLagoonValue"
        android:layout_alignParentRight="true" />

</RelativeLayout>
